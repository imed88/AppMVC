@model WebApplication4.Models.Tables.Medicine.tbl_product
@{
    ViewBag.Title = "Adtocart";
}
<br />
<br />
<br />
@using (@Html.BeginForm())
{



    <div class="container">

        <div class="row">

            <div class="col-lg-4 col-md-4 col-sm-4">

                <img style="min-height:200px; width:200px;" src="@Url.Content(Model.pro_image)" />


            </div>



            <div class="col-lg-8 col-md-8 col-sm-8">

                <h1>Product Name: @Model.pro_name</h1>
                <h2>Price: @Model.Quantity PKR</h2>
                <h6>Description: @Model.pro_desc</h6>

                <input type="number" name="qty" value="1" id="qty" min="1" max="10"/>

                <input type="submit" value="Submit" class="btn btn-default" />

            </div>



        </div>


    </div>

}