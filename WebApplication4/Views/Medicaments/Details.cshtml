@model WebApplication4.Models.Tables.ShopCart.Product

@{
    ViewBag.Title = "DetailProductCart";
    Layout = "~/Views/Shared/MedicamentsLayout/adminLayout.cshtml";
}

<h2>DetailProductCart</h2>
<div class="product-description row">
    <div class="product-image">
        <img src='@Url.Content("~/Uploads/"+Model.ImageFile)' style="width:200px;
            height:200px;
            " />
    </div>
    <div class="product-detail-content" style="float:left; width:50%">
        <p>Product Name : @Model.NameProduct</p>
        <p>Product Name : @Model.NameProduct</p>

        <p>
            @Html.ActionLink("Add to cart","OrderNow",
       "ShoppingCart", new {id=Model.ProductID}, null)
        </p>


    </div>
</div>
