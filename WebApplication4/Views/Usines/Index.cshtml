@model IEnumerable<WebApplication4.Models.Tables.Usine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Usines", FormMethod.Post))
{
<div>
    @Html.Label("Recherche:")
    @Html.TextBox("searching")
    <input id="submit" type="submit" value="Rechercher" />
</div>
}

<table class="table">
    <tr>
        <th>
           @* @Html.DisplayNameFor(model => model.UsineName)*@

            @Html.ActionLink("Usine", "Index", new { order=ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UsineName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdUsine }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdUsine }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdUsine })
        </td>
    </tr>
}

</table>
