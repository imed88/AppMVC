@model WebApplication4.Models.Tables.Usine

<section class="content-header">
    <h1>
        Infirmerie
        <small>Liste des usines</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li >Usines</li>
        <li class="active">Editer</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <h2>Modifier l'élément</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdUsine)

                <div class="form-group">
                    @*@Html.LabelFor(model => model.UsineName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Nom de l'usine", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UsineName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UsineName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modifier" class="btn btn-warning" />|   @*@Html.ActionLink("Retour", "Index")*@
                        <a href="@Url.Action("Index", "Usines")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Retour", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        </div></section>