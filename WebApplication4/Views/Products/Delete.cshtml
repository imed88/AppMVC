@model WebApplication4.Models.Tables.Medicine.tbl_product
<section class="content-header">
    <h1>
        Infirmerie
        <small>Gestion des médicaments</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li>Médicaments</li>
        <li class="active">Supprimer</li>
    </ol>
</section>
<!-- Main content -->
<div class="container-fluid">
    <section class="content">
        <div class="row">
            <h2>Suppression de l'élément</h2>
            <h3>Vous êtes sûr de supprimer cet élément?</h3>
            <div>
                @*<h4>Specialite</h4>*@
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Medicament")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.pro_name)
                    </dd>

                    <dt>
                        @Html.DisplayName("Quantité")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>

                    <dt>
                        @Html.DisplayName("Description")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.pro_desc)
                    </dd>

                    <dt>
                        @Html.DisplayName("Aperçu")
                    </dt>

                    <dd>
                        @*@Html.DisplayFor(model => model.pro_image)*@
                        <img src="~/Uploads/@Html.DisplayFor(model=> model.pro_image)" class="thumbnail" style="width:100px; height:100px" />
                    </dd>

                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                        @*@Html.ActionLink("Retour", "Index")*@
                        <a href="@Url.Action("Index", "Specialites")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                }
            </div>
            </div></section></div>
