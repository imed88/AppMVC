@model WebApplication4.Models.Tables.AppointementModel
<div class="container-fluid">
    <section class="content-header">
        <h1>
            Infirmerie
            <small>Rendez-vous avec les médecins conventionnés</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li>Rendez-vous</li>
            <li class="active">Editer</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <h2>Modifier l'élément</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.AppointmentID)
                <div class="form-group">
                    @*@Html.LabelFor(model => model.DateCreated, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Date de consultation", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DtEdit, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DtEdit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.DateCreated, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Heure de consultation", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.dateTime, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DtEdit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.idDoctors, "idDoctors", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Médecin", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idDoctors", null, htmlAttributes: new { @class = "form-control", @id = "Medecin" })
                        @Html.ValidationMessageFor(model => model.idDoctors, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(model => model.idPatients, "idPatients", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Patient", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idPatients", null, htmlAttributes: new { @class = "form-control", @id = "Patients" })
                        @Html.ValidationMessageFor(model => model.idPatients, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modifier" class="btn btn-warning" />|   @*@Html.ActionLink("Retour", "Index")*@
                        <a href="@Url.Action("Index", "AppointementModels")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            }
            @*<div>
                    @Html.ActionLink("Retour", "Index")
                </div>*@
        </div>
    </section>
</div>
@section scripts{
    <script>
        $(function () {


            $("#Medecin").chosen();
            $("#Patients").chosen();
        });

    </script>
}