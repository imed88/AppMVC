@model WebApplication4.Models.Tables.AppointementModel

<section class="content-header">
    <h1>
        Infirmerie
        <small>Rendez-vous avec les médecins conventionnés</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li>Rendez-vous</li>
        <li class="active">Créer</li>
    </ol>
</section>

<!-- Main content -->
<div class="container-fluid">
    <section class="content">
        <div class="row">
            <h2>Créer un Rendez-vous chez un médecin conventionné</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @*@Html.LabelFor(model => model.UserID, "UserID", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Administrateur", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.idPatients, "idPatients", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Patient", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idPatients", null, htmlAttributes: new { @class = "form-control", @id = "Patients" })
                        @Html.ValidationMessageFor(model => model.idPatients, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(model => model.IdSpecialite, "IdSpecialite", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Spécialité", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @*@Html.DropDownList("IdSpecialite", null, htmlAttributes: new { @class = "form-control", @id = "Specialite" })*@
                        @*@Html.DropDownListFor(x => x.IdSpecialites, ViewBag.idSpecialite as SelectList, htmlAttributes: new { @class = "form-control", @id = "JourHeureTravail1" })*@

                       @* @Html.ValidationMessageFor(model => model.IdSpecialites, "", new { @class = "text-danger" })*@
                    </div>
                </div>
                <div class="form-group">
                    @*@Html.LabelFor(model => model.idDoctors, "idDoctors", htmlAttributes: new { @class = "control-label col-md-2" })*@
                    @Html.Label("Médecin", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("idDoctors", null, htmlAttributes: new { @class = "form-control", @id = "Medecin" })
                        @Html.ValidationMessageFor(model => model.idDoctors, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.JourHeureTravail1, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @*@Html.DropDownList("JourHeureTravail", null, htmlAttributes: new { @class = "form-control", @id = "JourHeureTravail" })*@
                        @Html.DropDownListFor(x => x.JourHeureTravail1, ViewBag.JourHeureTravail1 as SelectList, htmlAttributes: new { @class = "form-control", @id = "JourHeureTravail1" })

                        @Html.ValidationMessageFor(model => model.JourHeureTravail1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.JourHeureTravail2, htmlAttributes: new { @class = "control-label col-md-2" })

                    <div class="col-md-10">
                        @*@Html.DropDownList("JourHeureTravail", null, htmlAttributes: new { @class = "form-control", @id = "JourHeureTravail" })*@
                        @Html.DropDownListFor(x => x.JourHeureTravail2, ViewBag.JourHeureTravail2 as SelectList, htmlAttributes: new { @class = "form-control", @id = "JourHeureTravail2" })

                        @Html.ValidationMessageFor(model => model.JourHeureTravail2, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Créer" class="btn btn-success" /> |  <a href="@Url.Action("Index", "AppointementModels")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            }
            @*<div>
                    @Html.ActionLink("Retour", "Index")

                </div>*@
        </div>
    </section>
</div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
