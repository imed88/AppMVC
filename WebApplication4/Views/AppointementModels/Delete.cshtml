@model WebApplication4.Models.Tables.AppointementModel
<div class="container-fluid">
    <section class="content-header">
        <h1>
            Infirmerie
            <small>Rendez-vous avec les médecins conventionnés</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
            <li>Rendez-vous</li>
            <li class="active">Supprimer</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <h2>Suppression de l'élément</h2>
            <h3>Vous êtes sûr de vouloir supprimer cet élément ?</h3>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
                        @*@Html.ActionLink("Retour", "Index")*@<a href="@Url.Action("Index", "AppointementModels")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                }
                <hr />
                <div>
                    <hr />
                    <div>
                        <hr />
                        <table class="table table-striped table-dark">
                            <tr>
                                <td>  @Html.Label("Date de prise de rendez vous", htmlAttributes: new { @class = "control-label col-md-25" })</td>
                                <td>  @Html.DisplayFor(model => model.DtEdit)</td>
                                <td>@Html.Label("Heure de prise de rendez vous", htmlAttributes: new { @class = "control-label col-md-25" })</td>
                                <td>  @Html.DisplayFor(model => model.dateTime)</td>
                            </tr>
                            <tr>
                                <td> @Html.Label("Médecin", htmlAttributes: new { @class = "control-label col-md-25" })</td>
                                <td>   @Html.DisplayFor(model => model.Doctor.nameDoctors)</td>
                                <td>  @Html.Label("Nom du patient", htmlAttributes: new { @class = "control-label col-md-25" })</td>
                                <td> @Html.DisplayFor(model => model.Patient.NomPatient)</td>
                            </tr>

                            <tr>
                                <td>  @Html.Label("Prenom du Patient", htmlAttributes: new { @class = "control-label col-md-30" })</td>
                                <td>   @Html.DisplayFor(model => model.Patient.PrenomPatient)</td>

                                <td>  @Html.Label("Matricule du Patient", htmlAttributes: new { @class = "control-label col-md-30" })</td>
                                <td>   @Html.DisplayFor(model => model.Patient.MatriculePatients)</td>
                            </tr>
                            <tr>
                                <td>  @Html.Label("Lieu du travail", htmlAttributes: new { @class = "control-label col-md-30" })</td>
                                <td>   @Html.DisplayFor(model => model.Patient.Usines.UsineName)</td>


                            </tr>






                        </table>

                    </div>

                </div>
            </div>
            </div>
    </section>
</div>