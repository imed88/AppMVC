@model WebApplication4.Models.Tables.MedecinConventionne
<section class="content-header">
    <h1>
        Infirmerie
        <small>Medecins Conventionnés</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li>Medecins Conventionnés</li>
        <li class="active">Créer</li>
    </ol>
</section>

<!-- Main content -->
<div class="container-fluid">
    <section class="content">
        <div class="row">

            <h2>Créer un nouveau médecin conventionné</h2>
            @using (Html.BeginForm("Create", "MedecinConventionnes", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

            <form>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Nom du médecin", htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.nameDoctors, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nameDoctors, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Messagerie électronique", htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.emailDoctors, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.emailDoctors, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Téléphone", htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.phoneDoctors, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phoneDoctors, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Spécialité", htmlAttributes: new { @class = "control-label " })
                        @Html.DropDownList("IdSpecialite", null, htmlAttributes: new { @class = "form-control", @id = "Specialite" })
                        @Html.ValidationMessageFor(model => model.idSpecialite, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Jour de Travail 1", htmlAttributes: new { @class = "control-label " })
                        <div class="editor-field">
                            @Html.DropDownList("JourTravail1", new List<SelectListItem>
                               {
                                   new SelectListItem{ Text="Lundi", Value="Lundi"},
                                   new SelectListItem{ Text="Mardi", Value="Mardi"},
                                   new SelectListItem{ Text="Mercredi", Value="Mercredi"},
                                   new SelectListItem{ Text="Jeudi", Value="Jeudi"},
                                   new SelectListItem{ Text="Vendredi", Value="Vendredi"},
                                   new SelectListItem{ Text="Samedi", Value="Samedi"}
                               }, "--- Séléctionner un jour ---", new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.JourTravail1, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Heure de travail 1", htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.TimeTravail1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TimeTravail1, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.Label("Jour de Travail 2", htmlAttributes: new { @class = "control-label " })
                        <div class="editor-field">
                            @Html.DropDownList("JourTravail2", new List<SelectListItem>
                               {
                                   new SelectListItem{ Text="Lundi", Value="Lundi"},
                                   new SelectListItem{ Text="Mardi", Value="Mardi"},
                                   new SelectListItem{ Text="Mercredi", Value="Mercredi"},
                                   new SelectListItem{ Text="Jeudi", Value="Jeudi"},
                                   new SelectListItem{ Text="Vendredi", Value="Vendredi"},
                                   new SelectListItem{ Text="Samedi", Value="Samedi"}
                               }, "--- Séléctionner un jour ---", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.Label("Heure de travail 2", htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.TimeTravail2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TimeTravail2, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Créer" class="btn btn-success" /> |  <a href="@Url.Action("Index", "MedecinConventionnes")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                </div>

            </form>
            }
            @*<div>
                    @Html.ActionLink("Retour", "Index")
                </div>*@
            @section scripts{
                <script>
                    $(function () {
                        $("#create").click(function () {
                            if ($("#picDoctors").val() == "") {
                                $("#error-div").fadeIn();
                                $("#view-err").append("Veuillez choisir une image");
                                return false;

                            }
                        });
                    });
                </script>
                <script>
                    $(function () {

                        $("#Specialite").chosen();
                    });
                </script>
            }
        </div>
    </section>
</div>
