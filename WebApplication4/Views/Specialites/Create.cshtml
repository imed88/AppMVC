@model WebApplication4.Models.Tables.Specialite

<section class="content-header">
    <h1>
        Infirmerie
        <small>Liste des spécialités</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li>Spécialités</li>
        <li class="active">Créer</li>
    </ol>
</section>

<!-- Main content -->
<div class="container-fluid">
    <section class="content">
        <div class="row">
            <h2>Créer une spécialité</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @*<h4>Specialite</h4>*@
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.SpecialiteName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                        @Html.Label("Nom de la spécialité", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SpecialiteName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SpecialiteName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Créer" class="btn btn-success" /> |  <a href="@Url.Action("Index", "Specialites")" class="btn btn-default">
                                <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                                <span>
                                    <strong>Retour</strong>
                                </span>
                            </a>
                        </div>
                    </div>
                </div>
            }
            @*<div>
                    @Html.ActionLink("Retour", "Index")
                </div>*@
        </div>
    </section>
</div>