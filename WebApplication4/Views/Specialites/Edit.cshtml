@model WebApplication4.Models.Tables.Specialite
<section class="content-header">
    <h1>
        Infirmerie
        <small>Liste des spécialités</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Accueil</a></li>
        <li>Spécialités</li>
        <li class="active">Editer</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">

        <h2>Modifier l'élément</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdSpecialite)

                <div class="form-group">
                    @Html.LabelFor(model => model.SpecialiteName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SpecialiteName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SpecialiteName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Modifier" class="btn btn-warning" />|   @*@Html.ActionLink("Retour", "Index")*@
                        <a href="@Url.Action("Index", "Specialites")" class="btn btn-default">
                            <i class="glyphicon glyphicon glyphicon-chevron-left"></i>
                            <span>
                                <strong>Retour</strong>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Retour", "Index")
        </div>
        </div></section>