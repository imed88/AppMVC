@model WebApplication4.Models.ViewModels.PatientsMedicamentViewModel

@{
    ViewBag.Title = "CreateOrdonnance";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2>CreateOrdonnance</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>PatientsMedicamentViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
