            @Html.ValidationMessageFor(model => model.PrenomPatient, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <table>
                @for(int i=0; i<Model.AvailableMedicaments.Count;i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(x => Model.AvailableMedicaments[i].Id)
                            @Html.DisplayFor(it => Model.AvailableMedicaments[i].Title)
                                            </td>
                        <td>@Html.CheckBoxFor(it => Model.AvailableMedicaments[i].IsChecked)</td>
                    </tr>
                }
            </table>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
