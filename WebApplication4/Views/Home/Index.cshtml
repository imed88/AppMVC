@model IEnumerable<WebApplication4.Models.Tables.Specialite>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <h1 style="color:black; font-size:xx-large">Bienvenue Mr/Mme </h1>
    <p  style="color:black">
        Bienvenue à la plateforme de gestion des fiches de patients de la Régie Nationale des Tabacs et des Allumettes (RNTA).

    </p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Plus d'informations</a></p>
</div>

@foreach (var item in Model)
{
<div class="panel panel-default" style="padding:15px">
    <h1 class="panel-heading">@Html.DisplayFor(modelItem => item.SpecialiteName)</h1>
    <div class="row">
        @foreach (var subItem in item.medConv)
        {

            <div class="col-md-3 thumbnail" style="margin-left:20px; margin-bottom:30px; height:300px">
                <img src="~/Uploads/@subItem.picDoctor" />
                <h4 style="color:black">@Html.DisplayFor(modelItem => subItem.nameDoctors)</h4>
                <h3 style="color:black">@Html.DisplayFor(modelItem => subItem.phoneDoctors)</h3>
                <button class="btn btn-default btn-primary">Plus d'informations</button>
            </div>

        }
    </div>
</div>
}

