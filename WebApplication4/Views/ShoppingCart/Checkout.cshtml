@using WebApplication4.Models;
@model WebApplication4.Models.Tables.ShopCart.PatientsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/adminlte/_mainLayout.cshtml";
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<h2>Liste des produits sélectionnés</h2>
@{
    if (Session["Cart"] != null)
    {

        <table border="1">
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                @*<th>SubTotal</th>*@
            </tr>
            @foreach (var cart in (List<WebApplication4.Models.Tables.ShopCart.Cart>)Session["Cart"])
            {
                <tr>
                    <td>
                        @*@cart.Product.ProductName*@
                        @Html.ActionLink(cart.Product.ProductName, "Details", "Medicaments", new { id = cart.Product.ProductID }, null)

                    </td>
                    <td>
                        @*@cart.Quantity*@
                        <input type="text" name="quantity" id="quantity" value="@cart.Quantity" readonly />

                    </td>
                    @*<td>@(String.Format("{0}", cart.Quantity))</td>*@


                </tr>

            }

            <tr>
                <td>
                    Total :
                </td>
                <td>
                    @{
                        List<WebApplication4.Models.Tables.ShopCart.Cart> temp = (List<WebApplication4.Models.Tables.ShopCart.Cart>)Session["Cart"];
                        var total = String.Format("{0}", temp.Sum(x => x.Quantity));
                    }
                    @total
                </td>
            </tr>
        </table>
        <br />



    }
    else
    {
        <h4>No items in your cart !!</h4>
    }

}
<br />
@using (Html.BeginForm("ProcessOrder", "ShoppingCart", FormMethod.Post, new {id="customer-form"}))
{
<table>
    <tr>
        <td colspan="2" style="text-align:center">Information du Patient</td>
    </tr>
    <tr>
        <td>Id du Patient</td>
        <td>
                <input type="text" name="MatriculePatient"/>        
        </td>
    <tr>
        <td>N° Consultation</td>
        <td>
            <input type="text" name="NConsultation" />
        </td>
    </tr>

    <tr>
        <td colspan="2">
            <input type="submit" value="Process Order" class="btn btn-info" />
        </td>
    </tr>
</table>
}

<script>
    $("#customer-form").validate({
        rules: {
            Patients: {
                required:true
            },
            Consultations: {
                required: true
            }

        }
    });
</script>



